<!DOCTYPE html>
<html lang="es">

<head>
  {% include 'parts/head.view.twig' %}
  <link rel="stylesheet" href="/assets/styles/cuentas.css" />
  <link rel="stylesheet" href="/assets/styles/formularios.css">
</head>

<body>
  <!--HEADER-->
  {% include 'parts/header.view.twig' %}

  <main>
    <h1>Gesti√≥n de consumos</h1>
    <section id="pedidos">
      <h2>Pedidos</h2>
      <ul class="pedidosList">
        {% for pedidosConsumo in pedidos %}
        <li>
          
          <p>IDPedido: {{pedidosConsumo.id}} - IDUsuario:{{pedidosConsumo.idUsuario}}- Fecha:{{pedidosConsumo.fecha_pedido}}</p>
          <p>Estado: {{pedidosConsumo.estado}}</p>
          <ul>
            <p> -Productos: </p>
            {% for productos in pedidosConsumo.elementos %}
            <li>
              <p> --- Plato: {{productos.id_plato}}</p>
            </li>
            <li>
              <p> --- Cantidad: {{productos.cantidad}}</p>
            </li>
            <li>
              <p> --- Aclaraciones: {{productos.aclaraciones}}</p>
            </li>
            </br>
            {% endfor %}
          </ul>
        </li>
        </br>
        {% endfor %}

      </ul>
    </section>
    
    <section class="reportes">
      <h2>Reservas</h2>
      <ul class="reportesList">
        {% for reservasConsumo in reservas %}
        <li>
          <p>ID Pedido: {{reservasConsumo.id}}</p>
          <p>-- Local: {{reservasConsumo.local}}</p>
          <p>-- Cantidad personas: {{reservasConsumo.cantidadPersonas}}</p>
          <p>-- Dia: {{reservasConsumo.dia}}</p>
          <p>-- Hora: {{reservasConsumo.hora}}</p>
          <p>-- Mesa: {{reservasConsumo.mesa}}</p>
          <p>-- Aclaraciones: {{reservasConsumo.aclaracion}}</p>
        </li>
        </br>
        {% endfor %}
      </ul>
    </section>
  </main>

  <!--FOOTER-->
  {% include 'parts/footer.view.twig' %}
</body>

</html>
